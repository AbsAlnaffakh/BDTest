<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
    <metadata>
        <!-- The identifier that must be unique within the hosting gallery -->
        <id>BDTest.ReportGenerator</id>

        <!-- The package version number that is used when resolving dependencies -->
        <version>1.0.13</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>Tom Longhurst</authors>

        <!-- 
            Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  
        -->
        <owners>Tom Longhurst</owners>

        <title>BDTest Report Generator</title>

        <!-- Project URL provides a link for the gallery -->
        <projectUrl>http://github.com/thomhurst/BDTest</projectUrl>

        <!-- License information is displayed on the gallery -->
        <license type="expression">Apache-2.0</license>


        <!-- The icon is used in Visual Studio's package manager UI -->
        <iconUrl>http://github.com/thomhurst/BDTest/nuget_icon.png</iconUrl>

        <!-- 
            If true, this value prompts the user to accept the license when
            installing the package. 
        -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>

        <!-- Any details about this particular release -->
        <releaseNotes>Tests stopped before finishing now correctly show as 'Inconclusive'</releaseNotes>

        <!-- 
            The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. 
        -->
        <description>A Report Generator for BDTest</description>

        <summary>A Report Generator for BDTest</summary>

        <!-- Copyright information -->
        <copyright>Copyright Â©2019 Tom Longhurst</copyright>

        <!-- Tags appear in the gallery and can be used for tag searches -->
        <tags>test tdd bdd testing json html xml data report</tags>

        <!-- Dependencies are automatically installed when the package is installed -->
        <dependencies>
            <dependency id="HtmlTags.AspNetCore" version="7.0.3" />
			<dependency id="BDTest" version="1.0.13" />
        </dependencies>
    </metadata>

    <files>
        <file src="bin\Release\**\BDTest.ReportGenerator.runtimeconfig.json" target="build" />
        <file src="bin\Release\**\BDTest.ReportGenerator.deps.json" target="build" />
        <file src="bin\Release\**\BDTest.ReportGenerator.props" target="build" />
        <file src="bin\Release\**\BDTest.ReportGenerator.dll" target="build" />
        <file src="bin\Release\**\css\" target="build" />
    </files>
</package>