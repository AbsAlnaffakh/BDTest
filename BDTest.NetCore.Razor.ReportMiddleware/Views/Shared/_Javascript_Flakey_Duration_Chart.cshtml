let durationChartContext = document.getElementById('duration-trend-chart-@Model.Index').getContext('2d');
data = {
    datasets: [{
        backgroundColor: "#3298dc",
        borderColor: "#3298dc",
        data: [
            @foreach (var timespan in Model.Scenarios.Select(model => model.EndTime - model.StartTime))
            {
                @((long)timespan.TotalSeconds)@:,
            }
            ]
    }],

    labels: [
        @foreach (var scenario in Model.Scenarios)
        {
            @:"@scenario.StartTime.ToStringForReport(false)",
        }
    ]
}

let durationChart = new Chart(durationChartContext, {
    type: 'line',
    data: data,
    options: {
        legend: {
                    display: false
                },
        scales: {
            yAxes: [{
              scaleLabel: {
                labelString: 'Seconds'
              },
              ticks: {
                  beginAtZero:true,
                  // Include a dollar sign in the ticks
                  callback: function(value, index, values) {
                      return value + "s";
                  }
                  }
            }]
          },
        tooltips: {
            callbacks: {
                label: function(tooltipItem, data) {
                  return data.datasets[tooltipItem.datasetIndex].data[tooltipItem.index] + " seconds";
                }
            }
        }
    }
});
}
</script>