@model BDTest.NetCore.Razor.ReportMiddleware.Views.BDTest.TrendsPageGenericDropdownViewModel

@{
    var javascriptMethodName = $"filter{Model.QueryParameterName}";
}

<script>
    function @javascriptMethodName (value) {
      window.location.href = getUrlWithAppendedParameter('@Model.QueryParameterName', value);
    }
</script>

<div class="dropdown">
    <div class="dropdown-trigger">
        <button class="btn btn-primary" aria-haspopup="true" aria-controls="dropdown-menu">
            <p id="@Model.ButtonId">@Model.ButtonText <i class="arrow down"></i></p>
            @* <span class="icon is-small"> *@
            @*   <i class="fas fa-angle-down" aria-hidden="true"></i> *@
            @* </span> *@
        </button>
    </div>
    <div class="dropdown-menu has-text-centered" id="environment-dropdown-menu" role="menu">
        <div class="dropdown-content has-text-centered">
            @foreach (var value in Model.DropdownValues)
            {
                <a class="dropdown-item">
                    <button class="btn" onclick="@javascriptMethodName ('@value');">
                        @value
                    </button>
                </a>
            }
        </div>
    </div>
</div>